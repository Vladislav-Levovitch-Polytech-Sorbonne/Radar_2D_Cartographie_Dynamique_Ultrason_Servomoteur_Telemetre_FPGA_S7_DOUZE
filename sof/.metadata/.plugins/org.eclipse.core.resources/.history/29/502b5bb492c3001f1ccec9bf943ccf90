uint8_t read_uart_data() {
    // Lire les données UART (offset 0x8)
    uint32_t read_value = IORD_32DIRECT(UART_BASE, 0x8);
    return (uint8_t)(read_value & 0xFF); // Extraire les 8 bits de poids faible
}

