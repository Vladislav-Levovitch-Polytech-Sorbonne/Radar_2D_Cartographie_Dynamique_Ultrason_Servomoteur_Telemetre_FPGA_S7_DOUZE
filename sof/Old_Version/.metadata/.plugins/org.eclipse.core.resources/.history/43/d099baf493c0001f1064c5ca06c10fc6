#include "system.h"
#include "io.h"
#include <stdio.h>
#include "altera_avalon_pio_regs.h"
#include "neopixel_radar.h"
#include "unistd.h" // Pour usleep
int value = 30;
int degres = 0;
int main()
{
  while (1)
  {
	  /*printf("Valeur actuelle : %d\n", value);
	  IOWR_ALTERA_AVALON_NEOPIXEL(value); // Écriture en binaire
	  usleep(200000);
	  value ++;
	  if (value>12)
	  {
		  value = 0;
	  }*/

	  printf("Valeur Angulaire = %d.%d°\tTranche de Progression = %.1f%%\n", degres/10,degres%10, (degres/150*8.34));
	  	  IOWR_ALTERA_AVALON_SERVOMOTEUR(degres); // Écriture en binaire
	  	  usleep(80000);
	  	  degres += 10;
	  	  if (degres>1793)
	  	  {
	  		degres = 1800;
	  		IOWR_16DIRECT(AVALON_SERVOMOTEUR_BASE, 0, 1793);
	  		printf("Valeur actuelle : %d.%d°\n", degres/10,degres%10);
	  		usleep(170000);
	  		degres = 0;
	  		usleep(80000);
	  	  }
  }
  return 0;
}






